pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the Git repository
                git branch: 'main', url: 'https://github.com/Bhavesharya07/sit753-6.2hd'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // If there's any environment setup or dependency installation, add it here.
                    echo 'Building the application...'
                    
                    // Install Python dependencies, if required (using pip and a requirements.txt file)
                    sh '''
                    python3 -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                    '''
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                script {
                    // Run the linter (flake8) for code analysis
                    echo 'Running Code Analysis...'
                    
                    sh '''
                    source venv/bin/activate
                    pip install flake8  # Install flake8 if not in requirements
                    flake8 --max-line-length=88 --statistics --count
                    '''
                    
                    // You can also add pylint or other analysis tools similarly:
                    // pip install pylint
                    // pylint todo_app.py
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Run the Python application for testing
                    echo 'Running tests...'
                    
                    sh '''
                    source venv/bin/activate
                    python3 todo_app.py < test_input.txt > test_output.txt
                    '''
                }
            }
        }
    }
    
    post {
        always {
            // This runs whether the pipeline passes or fails.
            echo 'Pipeline completed.'
        }
    }
}
